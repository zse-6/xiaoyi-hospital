/* pages/triage/triage.wxss */
.triage-page {
  min-height: 100vh;
  background: #f8fbff;
  padding-bottom: 120rpx;
}

/* 顶部导航 */
.page-header {
  display: flex;
  align-items: center;
  padding: 60rpx 30rpx 30rpx;
  background: linear-gradient(135deg, #2a8ce5 0%, #1a6cc0 100%);
  color: white;
}

.back-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
}

.page-title {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
}

.user-info-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
}

/* 用户信息面板 */
.user-info-panel {
  background: white;
  margin: 0 30rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  transform: translateY(-20rpx);
  margin-bottom: 20rpx;
}

.panel-content {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.info-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.info-label {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  width: 120rpx;
}

.info-input {
  flex: 1;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 20rpx 30rpx;
  font-size: 32rpx;
  text-align: right;
}

.gender-options {
  flex: 1;
  display: flex;
  gap: 20rpx;
}

.gender-option {
  flex: 1;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 20rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s ease;
}

.gender-option.selected {
  background: #2a8ce5;
  color: white;
}

/* 模式切换器 */
.mode-switcher {
  display: flex;
  background: white;
  margin: 0 30rpx 30rpx;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.mode-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.mode-tab.active {
  background: #e8f4ff;
}

.mode-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.mode-text {
  font-size: 24rpx;
  color: #666;
}

.mode-tab.active .mode-text {
  color: #2a8ce5;
  font-weight: 500;
}

/* 输入区域 */
.input-section {
  margin: 0 30rpx;
}

.input-container {
  display: flex;
  background: white;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.symptom-input {
  flex: 1;
  font-size: 32rpx;
  padding: 20rpx;
  min-height: 80rpx;
}

.input-btn {
  background: #2a8ce5;
  color: white;
  border-radius: 16rpx;
  padding: 0 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 500;
}

/* 常见症状 */
.common-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.common-symptoms {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.common-symptom {
  background: #f8fbff;
  border-radius: 16rpx;
  padding: 25rpx;
  border: 2rpx solid #e8f4ff;
  transition: all 0.3s ease;
}

.common-symptom:active {
  background: #e8f4ff;
  transform: scale(0.98);
}

.common-symptom text:first-child {
  display: block;
  font-size: 28rpx;
  color: #2a8ce5;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.symptom-category {
  font-size: 22rpx;
  color: #999;
  display: block;
}

/* 语音输入区域 */
.voice-section {
  margin: 0 30rpx;
}

.voice-container {
  background: white;
  border-radius: 20rpx;
  padding: 60rpx 30rpx;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.voice-btn {
  background: #2a8ce5;
  color: white;
  border-radius: 50%;
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.voice-btn:active {
  transform: scale(0.95);
}

.voice-icon {
  font-size: 72rpx;
  margin-bottom: 20rpx;
}

.recording-view {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
}

.recording-animation {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15rpx;
}

.pulse-dot {
  font-size: 40rpx;
  color: #2a8ce5;
  animation: pulse 1.5s infinite ease-in-out;
}

.pulse-dot:nth-child(2) {
  animation-delay: 0.2s;
}

.pulse-dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes pulse {
  0%, 100% { opacity: 0.3; }
  50% { opacity: 1; }
}

.recording-text {
  font-size: 28rpx;
  color: #666;
}

.voice-result {
  margin-top: 40rpx;
  padding-top: 30rpx;
  border-top: 2rpx solid #f0f0f0;
}

.result-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 15rpx;
}

.result-text {
  font-size: 32rpx;
  color: #2a8ce5;
  font-weight: 500;
}

/* 人体图示区域 */
.body-section {
  margin: 0 30rpx;
  text-align: center;
}

.body-map {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
  margin-bottom: 20rpx;
}

.body-part {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  border: 4rpx solid transparent;
}

.body-part:active {
  transform: scale(0.98);
}

.body-part.selected {
  border-color: #2a8ce5;
  background: #e8f4ff;
}

.body-icon {
  font-size: 80rpx;
  display: block;
}

.body-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.body-tip {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
}

/* 症状列表区域 */
.symptoms-section {
  margin: 30rpx;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.clear-btn {
  background: #ffe6e6;
  color: #ff3333;
  border-radius: 12rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
}

.symptoms-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.symptom-item {
  background: #e8f4ff;
  border-radius: 50rpx;
  padding: 20rpx 35rpx;
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.symptom-text {
  font-size: 28rpx;
  color: #2a8ce5;
  font-weight: 500;
}

.remove-btn {
  width: 36rpx;
  height: 36rpx;
  background: #ff6b6b;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

/* 操作按钮区域 */
.action-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 30rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.diagnosis-btn {
  background: linear-gradient(135deg, #2a8ce5 0%, #1a6cc0 100%);
  border-radius: 50rpx;
  padding: 32rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15rpx;
  font-size: 0;
  border: none;
  transition: all 0.3s ease;
}

.diagnosis-btn.disabled {
  background: #cccccc;
  opacity: 0.7;
}

.diagnosis-btn:not(.disabled):active {
  transform: scale(0.98);
}

.btn-icon {
  font-size: 36rpx;
  color: white;
}

.btn-text {
  font-size: 34rpx;
  color: white;
  font-weight: 500;
}

.symptom-count {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.tip-text {
  display: block;
  text-align: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 15rpx;
}