/* 全局样式 */
.triage-page {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 顶部导航 */
.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border-radius: 50%;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}
.back-btn text {
  font-size: 32rpx;
  color: #333;
}
.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
.user-info-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border-radius: 50%;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}
.user-info-btn text {
  font-size: 32rpx;
}

/* 用户信息面板 */
.user-info-panel {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}
.panel-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}
.info-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
}
.info-label {
  font-size: 30rpx;
  color: #333;
  width: 120rpx;
}
.info-input {
  flex: 1;
  height: 80rpx;
  padding: 0 20rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  font-size: 30rpx;
}
.gender-options {
  display: flex;
  gap: 20rpx;
  flex: 1;
}
.gender-option {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  font-size: 30rpx;
  cursor: pointer;
}
.gender-option.selected {
  background-color: #e6f4ff;
  color: #1677ff;
  font-weight: bold;
}

/* 模式切换 */
.mode-switcher {
  display: flex;
  gap: 10rpx;
  margin-bottom: 30rpx;
}
.mode-tab {
  flex: 1;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  cursor: pointer;
  transition: all 0.2s;
}
.mode-tab.active {
  background-color: #1677ff;
  color: #fff;
}
.mode-icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
}
.mode-text {
  font-size: 26rpx;
}

/* 文本输入模式 */
.input-section {
  margin-bottom: 30rpx;
}
.input-container {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}
.symptom-input {
  flex: 1;
  height: 80rpx;
  padding: 0 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  font-size: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}
.input-btn {
  width: 160rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #1677ff;
  color: #fff;
  border-radius: 12rpx;
  font-size: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(22, 119, 255, 0.3);
  cursor: pointer;
}
.common-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}
.common-symptoms {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}
.common-symptom {
  padding: 16rpx 24rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 120rpx;
  cursor: pointer;
  transition: all 0.2s;
}
.common-symptom:active {
  background-color: #e6f4ff;
}
.common-symptom text:first-child {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
}
.symptom-category {
  font-size: 22rpx;
  color: #999;
}

/* 语音输入模式 */
.voice-section {
  margin-bottom: 30rpx;
}
.voice-container {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.voice-btn {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background-color: #1677ff;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(22, 119, 255, 0.4);
  cursor: pointer;
}
.voice-btn.recording {
  background-color: #ff4d4f;
}
.voice-icon {
  font-size: 60rpx;
  margin-bottom: 10rpx;
}
.voice-btn text:last-child {
  font-size: 28rpx;
}
.recording-view {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.recording-animation {
  display: flex;
  gap: 10rpx;
  margin-bottom: 20rpx;
}
.pulse-dot {
  font-size: 30rpx;
  color: #ff4d4f;
  animation: pulse 1s infinite;
}
.pulse-dot:nth-child(2) {
  animation-delay: 0.2s;
}
.pulse-dot:nth-child(3) {
  animation-delay: 0.4s;
}
@keyframes pulse {
  0% { opacity: 0.3; transform: scale(0.8); }
  50% { opacity: 1; transform: scale(1.2); }
  100% { opacity: 0.3; transform: scale(0.8); }
}
.recording-text {
  font-size: 30rpx;
  color: #ff4d4f;
}
.voice-result {
  margin-top: 30rpx;
  width: 100%;
}
.result-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}
.result-text {
  font-size: 32rpx;
  color: #333;
  line-height: 1.5;
}

/* 人体图示模式 */
.body-section {
  margin-bottom: 30rpx;
}

/* 已选症状列表 */
.total-symptoms {
  padding: 20rpx;
  margin: 20rpx 0;
  background: #f9f9f9;
  border-radius: 12rpx;
}
.symptoms-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 12rpx;
}
.symptom-tag {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  background: #e6f4ff;
  border-radius: 20rpx;
}
.tag-close {
  margin-left: 8rpx;
  width: 24rpx;
  height: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.tag-close text {
  font-size: 20rpx;
  color: #ff4d4f;
}
.clear-btn {
  padding: 8rpx 16rpx;
  color: #ff4d4f;
  background: #fff2f0;
  border-radius: 20rpx;
  font-size: 28rpx;
}

/* 人体图示症状列表 */
.selected-symptoms {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
}
.symptoms-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 12rpx;
}
.symptom-item {
  display: flex;
  align-items: center;
  padding: 10rpx 16rpx;
  background: #fff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.05);
}
.remove-btn {
  margin-left: 8rpx;
  width: 24rpx;
  height: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.remove-btn text {
  font-size: 20rpx;
  color: #666;
}

/* 操作按钮 */
.action-section {
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.diagnosis-btn {
  width: 100%;
  height: 100rpx;
  background-color: #1677ff;
  color: #fff;
  border-radius: 16rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  box-shadow: 0 4rpx 16rpx rgba(22, 119, 255, 0.3);
  border: none;
}
.diagnosis-btn.disabled {
  background-color: #ccc;
  box-shadow: none;
}
.btn-icon {
  font-size: 36rpx;
}
.symptom-count {
  font-size: 26rpx;
  margin-left: 10rpx;
}
.tip-text {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #999;
  text-align: center;
}