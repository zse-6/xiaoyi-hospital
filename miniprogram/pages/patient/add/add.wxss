/* miniprogram/pages/patient/add.wxss */
.add-patient-container {
  height: 100vh;
  background: #f5f5f5;
}

.form-header {
  padding: 40rpx 30rpx 20rpx;
  background: white;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-header .title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 15rpx;
}

.form-header .notice {
  display: block;
  font-size: 24rpx;
  color: #999999;
  line-height: 1.4;
}

.form-scroll {
  height: calc(100vh - 200rpx);
}

.patient-form {
  padding: 30rpx;
}

.form-item {
  margin-bottom: 20rpx;
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
}

.form-item .label {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.form-item .input {
  height: 80rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid #eeeeee;
  padding: 20rpx 0;
}

.picker {
  width: 100%;
}

.picker-view {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid #eeeeee;
  padding: 20rpx 0;
}

.picker-text {
  color: #333333;
}

.picker-text.placeholder {
  color: #cccccc;
}

.picker-arrow {
  color: #1296db;
  font-size: 28rpx;
  font-weight: bold;
}

.agreement-section {
  margin-top: 40rpx;
  padding: 30rpx;
  background: white;
  border-radius: 16rpx;
}

.agreement-item {
  display: flex;
  align-items: flex-start;
}

.agreement-text {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.4;
  margin-left: 20rpx;
  flex: 1;
}

.submit-section {
  margin-top: 50rpx;
  padding: 0 30rpx;
}

.submit-btn {
  height: 90rpx;
  background: #1296db;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn:disabled {
  background: #cccccc;
}