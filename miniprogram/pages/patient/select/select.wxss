/* miniprogram/pages/patient/select.wxss */
.select-patient-container {
  height: 100vh;
  background: #f5f5f5;
}

.page-header {
  padding: 40rpx 30rpx 20rpx;
  background: white;
  border-bottom: 1rpx solid #f0f0f0;
}

.page-header .title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

.page-header .subtitle {
  display: block;
  font-size: 24rpx;
  color: #999999;
}

.patient-list-scroll {
  height: calc(100vh - 280rpx);
}

.patient-list {
  padding: 30rpx;
}

.patient-item {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid #eeeeee;
}

.patient-item.active {
  border-color: #1296db;
  background: #f8fbff;
}

.patient-header {
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
  gap: 15rpx;
}

.patient-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.patient-relationship {
  font-size: 28rpx;
  color: #666666;
  background: #f5f5f5;
  padding: 6rpx 15rpx;
  border-radius: 8rpx;
}

.current-tag {
  font-size: 24rpx;
  color: #1296db;
  background: #e6f3ff;
  padding: 6rpx 15rpx;
  border-radius: 15rpx;
  margin-left: auto;
}

.patient-info {
  margin-bottom: 25rpx;
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
  font-size: 28rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  color: #999999;
  min-width: 180rpx;
}

.info-value {
  color: #333333;
  flex: 1;
}

.patient-management {
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.management-text {
  font-size: 26rpx;
  color: #666666;
}

.add-patient-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.add-patient-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 90rpx;
  background: #1296db;
  border-radius: 45rpx;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
}

.add-patient-btn .add-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

.management-tip {
  text-align: center;
  margin-top: 20rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #999999;
}