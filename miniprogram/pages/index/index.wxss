/* miniprogram/pages/index/index.wxss */

/* 页面容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(to bottom, #f5f9ff, #ffffff);
  padding-bottom: 40rpx; 
}

/* 顶部标题栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 30rpx 20rpx;
  background: white;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.app-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.header-dots {
  display: flex;
  gap: 8rpx;
}

.header-dots .dot {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: #dddddd;
}

.header-dots .dot.active {
  background: #1296db;
}

.user-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  border: 2rpx solid #f0f0f0;
}

/* 轮播图容器 */
.swiper-container {
  position: relative;
  margin: 0 30rpx 30rpx;
  border-radius: 20rpx;
  overflow: hidden;
  height: 280rpx;
  background: #e0e0e0; /* 背景色，当图片没加载时显示 */
}

.swiper {
  width: 100%;
  height: 100%;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

/* 轮播图指示点 */
.swiper-dots {
  position: absolute;
  bottom: 20rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  gap: 10rpx;
  z-index: 2;
}

.swiper-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.5);
  transition: all 0.3s;
}

.swiper-dot.active {
  width: 32rpx;
  border-radius: 8rpx;
  background: #1296db;
}

/* 就诊人卡片区域 */
.patient-card-section {
  margin: 0 30rpx 30rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(18, 150, 219, 0.12);
}

.patient-card {
  background: white;
}

.patient-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.patient-name-section {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.patient-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
}

.patient-relationship {
  font-size: 28rpx;
  color: #666666;
}

.patient-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 100rpx;
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 8rpx;
}

.action-text {
  font-size: 22rpx;
  color: #1296db;
}

.action-divider {
  width: 1rpx;
  height: 40rpx;
  background: #eeeeee;
}

/* 问题提示区域 */
.question-section {
  padding: 30rpx;
  background: #f8fbff;
}

.question-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.question-text {
  font-size: 28rpx;
  color: #333333;
}

.question-arrow {
  font-size: 32rpx;
  color: #cccccc;
}

/* 添加就诊人区域 */
.add-patient-section {
  background: white;
  padding: 50rpx 30rpx;
}

.add-patient-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.add-icon {
  width: 60rpx;
  height: 60rpx;
}

.add-text {
  font-size: 32rpx;
  color: #1296db;
  font-weight: bold;
}

.login-prompt {
  text-align: center;
}

.prompt-text {
  display: block;
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.prompt-subtext {
  display: block;
  font-size: 24rpx;
  color: #999999;
}

/* 主要功能模块 */
.main-functions {
  margin: 0 30rpx 40rpx;
}

.function-card {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: white;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
}

.function-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
}

.function-content {
  flex: 1;
}

.function-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.function-desc {
  display: block;
  font-size: 24rpx;
  color: #999999;
}

.function-arrow {
  font-size: 32rpx;
  color: #cccccc;
  margin-left: 20rpx;
}

/* 快捷服务区域 */
.quick-actions {
  margin: 0 30rpx 30rpx;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-right: 20rpx;
  white-space: nowrap;
}

.title-line {
  flex: 1;
  height: 1rpx;
  background: #eeeeee;
}

.actions-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.actions-grid .action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.actions-grid .action-icon {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 15rpx;
}

.actions-grid .action-text {
  font-size: 22rpx;
  color: #333333;
}


.tab-icon.home {
  background: url('/images/tabbar/home.png') center/contain no-repeat;
}

.tab-icon.process {
  background: url('/images/tabbar/process.png') center/contain no-repeat;
}

.tab-icon.guide {
  background: url('/images/tabbar/guide.png') center/contain no-repeat;
}

.tab-icon.mine {
  background: url('/images/tabbar/mine.png') center/contain no-repeat;
}

.tab-item.active .tab-icon.home {
  background-image: url('/images/tabbar/home-active.png');
}

.tab-item.active .tab-icon.process {
  background-image: url('/images/tabbar/process-active.png');
}

.tab-item.active .tab-icon.guide {
  background-image: url('/images/tabbar/guide-active.png');
}

.tab-item.active .tab-icon.mine {
  background-image: url('/images/tabbar/mine-active.png');
}

.tab-item text {
  font-size: 20rpx;
  color: #999999;
}

.tab-item.active text {
  color: #1296db;
}